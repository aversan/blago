h1, h2, h3, h4, h5, h6,
.h1, .h2, .h3, .h4, .h5, .h6
	margin-bottom $headings-margin-bottom
	font-family $headings-font-family
	font-weight $headings-font-weight
	line-height $headings-line-height
	color $headings-color
	text-transform none

.h1--alt, .h2--alt, .h3--alt, .h4--alt, .h5--alt, .h6--alt
	font-family $headings-font-family-alt
	font-weight $headings-font-weight-alt
	color $headings-color-alt
	text-transform uppercase

h1,
.h1,
.display-1
	font-size $font-size-h1

h2,
.h2,
.display-2
	font-size $font-size-h2

h3,
.h3,
.display-3
	font-size $font-size-h3

h4,
.h4,
.display-4
	font-size $font-size-h4

h5,
.h5,
.display-5
	font-size $font-size-h5

h6,
.h6,
.display-6
	font-size $font-size-h6

small,
.small
	font-size $small-font-size
	font-weight normal

.subtitle
	font-size .875rem
	font-family $headings-font-family
	font-weight $headings-font-weight
	line-height $headings-line-height
	color $headings-color
	margin-bottom $headings-margin-bottom

ol.decimal
	counter-reset li
	margin-left 0
	padding-left 0

	& > li
		position relative
		padding-left 1.75em
		list-style none

		&:before
			content counter(li)
			counter-increment li
			position absolute
			left 0
			box-sizing border-box
			width 1.1875rem
			height  1.1875rem
			font-size .75rem
			background-color #78b04c
			color #fff
			text-align center
			border-radius 100px
			top 3px
			padding-top 1px

.hr
	display block
	height 5px
	background url('data:image/png;base64,') 0 0 repeat-x
	overflow hidden
	margin 1.5rem 0


ul.disc
	list-style-type none
	padding-left 0
	margin-left 0

