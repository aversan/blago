.navigation
	font-family lifehack_sansregular, 'Trebuchet MS', Arial, sans-serif

	ul
		listReset()
		text-align center
		align-items center
		width 100%
		display -ms-flexbox
		display -webkit-flex
		display flex
		-ms-flex-pack distribute
		-webkit-justify-conten space-around
		justify-content space-around

	li
		display inline-block
		-ms-flex-negative 1

	a
	strong
		display inline-block
		vertical-align top
		text-align center
		font-size 29px
		font-weight 700
		line-height 40px
		color #396d36
		white-space nowrap
		padding 0 15px
		position relative
		min-width 60px
		z-index 1
		text-decoration none
		letter-spacing .1ex
		margin-left 15px
		margin-right 15px
		transition none

	a:focus
	a:hover
	.active a
	.active a:focus
	.active a:hover
	.active strong
		color #fff

	a:focus
	a:hover
	.active a
	.active strong
		&:before
		&:after
			position absolute
			content ''
			display block
			top 0
			sprite($common_navigation_active)
			width auto
			z-index -1

		&:before
			left -15px
			right 14px
			background-position 0 0

		&:after
			right -15px
			width 30px
			background-position 100% 0
