.map__title
	text-align center
	margin-bottom 1.6875rem

.map__overlay
	&
	.uk-overlay&
		margin-left auto
		margin-right auto
		display block
		width 976px
		height 481px
		max-width 976px
		position relative
		left -16px
		margin-left auto
		margin-right auto

.map__pin
	position absolute
	left 50%
	top 50%
	sprite($icon_pin)
	transform translate(-50%, -100%)

	.map__pin-title
		color #000
		opacity .5
		font-size 12px
		line-height 16px
		position absolute
		left 100%
		top 0
		text-transform uppercase
		white-space nowrap
		margin-left 10px

	&:hover
		.map__pin-title
			opacity .7

	.map__pin-title--pos-left
		left auto
		margin-left 0
		margin-right 10px
		right 100%
