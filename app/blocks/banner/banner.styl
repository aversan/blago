.banner
	border 10px solid #fff
	box-shadow 1px 1px 6px rgba(50, 41, 32, 0.27)
	display inline-block
	background-color #e9d8ad

.banner__logo
	display block
	position relative
	left 0
	right 0
	margin-left auto
	margin-right auto

.banner__content
	text-align center

.banner__go
	font-size 1.5rem
	font-family 'lifehack_sansregular', 'Trebuchet MS', Arial, sans-serif
	text-transform uppercase
	letter-spacing 0.1ex
	color #fff
	margin-top 1.5rem
	display inline-block
	white-space nowrap

	&:after
		content ''
		width 0
		height 0
		border-style solid
		border-width 5px 0 5px 6px
		border-color transparent transparent transparent #fff
		display inline-block
		vertical-align middle
		margin-left 5px
		margin-top -1px

.banner-container
	padding-top 90px
	padding-bottom 125px

	.page__intro-panel + &
		padding-top 30px
