		.uk-position-cover
			.icon-btn.icon-btn--alt.icon-btn--pin.top-image__pin.js-pin(style='position:absolute;margin-left:-30.5%;margin-top:-9.5%;', role='button', data-uk-modal="{target:'#modal-0', center:true}")
			.icon-btn.icon-btn--alt.icon-btn--pin.top-image__pin.js-pin(style='position:absolute;margin-left:-5%;margin-top:0.6%;', role='button', data-uk-modal="{target:'#modal-1', center:true}")
			.icon-btn.icon-btn--alt.icon-btn--pin.top-image__pin.js-pin(style='position:absolute;margin-left:7%;margin-top:5.8%;', role='button', data-uk-modal="{target:'#modal-2', center:true}")
			.icon-btn.icon-btn--alt.icon-btn--pin.top-image__pin.js-pin(style='position:absolute;margin-left:33.8%;margin-top:-5.5%;', role='button', data-uk-modal="{target:'#modal-3', center:true}")
			.uk-modal.js-modal-recept#modal-0
				.uk-modal-dialog.uk-modal-dialog-lightbox
					a.uk-modal-close.uk-close.uk-close-alt.js-modal-recept__close(href='')
					.row.uk-flex.uk-flex-middle.m-r-0
						.col-6
							img.img-fluid(src='assets/images/modal-image-01.jpg', alt='', width='250', height='310')
						.col-6
							.uk-modal__line
								h4.h4.h4--alt.text-center Растительное масло
							.uk-modal__line.b-text.b-text--smaller
